<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="1dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Separatal"
                    android:textSize="15sp"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:id="@+id/feed_separatal"/>


            </android.support.v7.widget.LinearLayoutCompat>


            </android.support.v7.widget.LinearLayoutCompat>

            <RelativeLayout
                android:id="@+id/divider2"
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#800000"
                android:layout_above="@+id/relSendMessage" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="0"
                android:id="@+id/feeds_profilePic"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                android:src="@drawable/nopic"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tempStat"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/feed_text"/>

            </android.support.v7.widget.LinearLayoutCompat>

            <RelativeLayout
                android:id="@+id/divider"
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="01dp"
                android:background="#800000"
                android:layout_above="@+id/relSendMessage2" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="02 Dec 2016"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:textSize="9sp"
                    android:id="@+id/feed_date"/>

            </android.support.v7.widget.LinearLayoutCompat>



        </LinearLayout> >

    </android.support.v7.widget.CardView>


</LinearLayout>
